    //响应保存按钮
    function onSaveLayout() {
        layout.Save("layoutModal", "index", data);
    }

    $(document).ready(function () {
        $(".layout-set-submit").on("click", function () {
            layout.Save("layoutModal", "index");
        });
    });
</script>